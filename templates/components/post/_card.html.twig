<div class="col">
    <div class="card">
        <h5 class="card-header text-primary p-2">
            {% for c in post.categories %}
                <a href="#{{ c.id }}" class="badge badge-primary text-primary p-1">{{ c.name }}</a>
            {% endfor %}
        </h5>
        <div class="card-body position-relative">
            <h5 class="card-title">{{ post.title }}</h5>
            <p class="card-text">{{ post.description }}</p>
            <a href="#{{ post.id }}" class="btn btn-primary stretched-link">Continue reading</a>
        </div>
    </div>
</div>
