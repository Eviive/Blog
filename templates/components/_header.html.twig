{% block header %}
	<header class="p-3 border-bottom">
		<div class="container">
			<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start gap-3">
				<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center align-items-center gap-3 mb-md-0">
					<li class="d-flex align-items-center">
						<a href="{{ path('app_home_index') }}" class="text-dark nav-link p-0">
							<svg width="40" height="32" viewBox="0 0 118 94">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M24.509 0c-6.733 0-11.715 5.893-11.492 12.284.214 6.14-.064 14.092-2.066 20.577C8.943 39.365 5.547 43.485 0 44.014v5.972c5.547.529 8.943 4.649 10.951 11.153 2.002 6.485 2.28 14.437 2.066 20.577C12.794 88.106 17.776 94 24.51 94H93.5c6.733 0 11.714-5.893 11.491-12.284-.214-6.14.064-14.092 2.066-20.577 2.009-6.504 5.396-10.624 10.943-11.153v-5.972c-5.547-.529-8.934-4.649-10.943-11.153-2.002-6.484-2.28-14.437-2.066-20.577C105.214 5.894 100.233 0 93.5 0H24.508zM80 57.863C80 66.663 73.436 72 62.543 72H44a2 2 0 01-2-2V24a2 2 0 012-2h18.437c9.083 0 15.044 4.92 15.044 12.474 0 5.302-4.01 10.049-9.119 10.88v.277C75.317 46.394 80 51.21 80 57.863zM60.521 28.34H49.948v14.934h8.905c6.884 0 10.68-2.772 10.68-7.727 0-4.643-3.264-7.207-9.012-7.207zM49.948 49.2v16.458H60.91c7.167 0 10.964-2.876 10.964-8.281 0-5.406-3.903-8.178-11.425-8.178H49.948z"></path>
							</svg>
						</a>
					</li>
					<li><a href="{{ path('app_home_index') }}" class="nav-link p-0 {{ app.request.get('_route') == 'app_home_index' ? 'link-secondary' : 'link-dark' }}">Overview</a></li>
					<li><a href="{{ path('app_home_post') }}" class="nav-link p-0 {{ app.request.get('_route') == 'app_home_post' ? 'link-secondary' : 'link-dark' }}">Posts</a></li>
					<li><a href="{{ path('app_home_category') }}" class="nav-link p-0 {{ app.request.get('_route') == 'app_home_category' ? 'link-secondary'  : 'link-dark' }}">Categories</a></li>
				</ul>

				<div id="search-container" class="col-12 col-lg-auto mb-lg-0 me-lg-3">
					<input type="search" id="search-input" class="form-control" placeholder="Search..." aria-label="Search" autocomplete="off">
					<div id="search-results" class="mt-1"></div>
				</div>

				<div class="btn-group text-end">
					<button class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownMenuClickableOutside" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
						<img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
					</button>
					<ul class="dropdown-menu text-small" aria-labelledby="dropdownMenuClickableOutside">
						{% if is_granted('ROLE_USER') %}
							<li><h6 class="dropdown-header">Profile</h6></li>
							<li><a class="dropdown-item" href="#">Settings</a></li>
							{% if is_granted('ROLE_ADMIN') %}
								<li><hr class="dropdown-divider"></li>
								<li><h6 class="dropdown-header">Admin</h6></li>
								<li><a class="dropdown-item" href="{{ path('app_post_index') }}">Posts</a></li>
								<li><a class="dropdown-item" href="{{ path('app_category_index') }}">Categories</a></li>
								<li><a class="dropdown-item" href="{{ path('app_comment_index') }}">Comments</a></li>
							{% endif %}
							<li><hr class="dropdown-divider"></li>
							<li><h6 class="dropdown-header">Session</h6></li>
							<li><a class="dropdown-item" href="{{ path('app_security_logout') }}">Sign out</a></li>
						{% else %}
							<li><h6 class="dropdown-header">Session</h6></li>
							<li><a class="dropdown-item" href="{{ path('app_security_login') }}">Sign in</a></li>
							<li><a class="dropdown-item" href="{{ path('app_security_register') }}">Register</a></li>
						{% endif %}
					</ul>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
