<form method="post"
      action="{{ path('app_post_publish', {'slug': post.slug}) }}"
      onsubmit="return confirm('Are you sure you want to {{ post.publishedAt ? 'unpublish' : 'publish' }} this post?')"
>
    <input type="hidden" name="_token" value="{{ csrf_token('publish' ~ post.id) }}">
    <button class="btn btn-{{ post.publishedAt ? 'danger' : 'success' }}">{{ post.publishedAt ? 'Unpublish' : 'Publish' }}</button>
</form>
