<div class="col">
    <div class="card h-100">
        <div class="card-body d-flex flex-column gap-2">
            <h5 class="card-title">{{ category.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ category.posts|length }} posts</h6>
            <p class="card-text">Temporary description of the {{ category.name }} category.</p>
            <a href="{{ path('app_home_category_show', { id: category.id }) }}" class="btn btn-primary mt-auto">See posts</a>
        </div>
    </div>
</div>
