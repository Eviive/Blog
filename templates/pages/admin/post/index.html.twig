{% extends 'layouts/base.html.twig' %}

{% block title %}Posts - {{ parent() }}{% endblock %}

{% block main %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Content</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.content|sanitize_html }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'slug': post.slug}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'slug': post.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
