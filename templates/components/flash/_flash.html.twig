 <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <svg class="rounded me-2 text-{{ label }}" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 20x20">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="currentColor"></rect>
        </svg>
        <strong class="me-auto">{{ label|capitalize }} notification</strong>
        <small class="time">Now</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        {{ message }}
    </div>
</div>
